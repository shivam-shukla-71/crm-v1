{
    "info": {
        "name": "CRM v1 - Auth, Users & Entities",
        "_postman_id": "a6a4e5f4-0b20-4a23-9f2a-collection",
        "description": "Postman collection for CRM v1 authentication, password reset, email update, admin user management, and entity management.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000"
        },
        {
            "key": "access_token",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/auth/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "register"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"john_doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"StrongPass123\",\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"phone\": \"+1234567890\",\n  \"role_id\": 3,\n  \"entity_id\": 1\n}"
                        },
                        "description": "Creates user with is_verified = 0 and sends OTP (rate-limited). Now requires entity_id."
                    }
                },
                {
                    "name": "Verify Registration OTP",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/auth/verify-otp",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "verify-otp"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"user_id\": 1,\n  \"email\": \"john@example.com\",\n  \"otp\": \"123456\"\n}"
                        },
                        "description": "Verifies OTP and sets is_verified = 1."
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"StrongPass123\"\n}"
                        },
                        "description": "Returns single access token (72h) and user profile {username, email, phone, role, entity}. Entity includes id, name."
                    }
                }
            ]
        },
        {
            "name": "Password (Public)",
            "item": [
                {
                    "name": "Request Password Reset (send OTP)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/auth/password/request",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "password",
                                "request"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"john@example.com\"\n}"
                        },
                        "description": "Sends OTP to user's email. Rate-limited: max 3/hour, 3-min gap, 5-min OTP expiry."
                    }
                },
                {
                    "name": "Verify Password Reset OTP (issue short token)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/auth/password/verify-otp",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "password",
                                "verify-otp"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"john@example.com\",\n  \"otp\": \"123456\"\n}"
                        },
                        "description": "Returns short-lived token (10 minutes) to allow password update."
                    }
                },
                {
                    "name": "Update Password (with short token)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/auth/password/update",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "password",
                                "update"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"token\": \"<short_lived_token>\",\n  \"new_password\": \"NewStrongPass123\"\n}"
                        },
                        "description": "Uses short-lived token to set a new password."
                    }
                }
            ]
        },
        {
            "name": "Email (Authenticated)",
            "auth": {
                "type": "bearer",
                "bearer": [
                    {
                        "key": "token",
                        "value": "{{access_token}}",
                        "type": "string"
                    }
                ]
            },
            "item": [
                {
                    "name": "Request Email Update (send OTP to new email)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/auth/email/request",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "email",
                                "request"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"new_email\": \"john.new@example.com\"\n}"
                        },
                        "description": "Sends OTP to the new email. On verify, user's email will be replaced."
                    }
                },
                {
                    "name": "Verify Email Update OTP",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/auth/email/verify",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "email",
                                "verify"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"otp\": \"123456\"\n}"
                        },
                        "description": "Verifies OTP stored for email_update and applies the new email."
                    }
                }
            ]
        },
        {
            "name": "Users (Admin/Manager)",
            "auth": {
                "type": "bearer",
                "bearer": [
                    {
                        "key": "token",
                        "value": "{{access_token}}",
                        "type": "string"
                    }
                ]
            },
            "item": [
                {
                    "name": "List Users (Manager/Admin)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/auth/users",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "users"
                            ]
                        },
                        "description": "Requires role_id 1 (admin) or 2 (manager). Returns users with entity information."
                    }
                },
                {
                    "name": "List Users by Entity (Manager/Admin)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/auth/users/entity/:entityId",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "users",
                                "entity",
                                ":entityId"
                            ],
                            "variable": [
                                {
                                    "key": "entityId",
                                    "value": "1"
                                }
                            ]
                        },
                        "description": "Requires role_id 1 (admin) or 2 (manager). Lists users filtered by specific entity."
                    }
                },
                {
                    "name": "Create User (Admin)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/auth/users",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "users"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"new_user\",\n  \"email\": \"new_user@example.com\",\n  \"password\": \"StrongPass123\",\n  \"first_name\": \"New\",\n  \"last_name\": \"User\",\n  \"phone\": \"+1230000000\",\n  \"role_id\": 3,\n  \"entity_id\": 1\n}"
                        },
                        "description": "Admin-only create. User is created unverified (follow normal verification flow if needed). Now requires entity_id."
                    }
                },
                {
                    "name": "Update User (Manager/Admin with constraints)",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/auth/users/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "users",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "1"
                                }
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"first_name\": \"Johnny\",\n  \"last_name\": \"Doe\",\n  \"phone\": \"+1234567899\",\n  \"is_active\": true,\n  \"entity_id\": 1\n}"
                        },
                        "description": "Manager can manage role_id >= 3; Admin can manage any. Can update entity_id."
                    }
                },
                {
                    "name": "Change Role (Admin/Manager with constraints)",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/auth/users/:id/role",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "users",
                                ":id",
                                "role"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "1"
                                }
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"role_id\": 3\n}"
                        },
                        "description": "Admin can set any role; Manager can set only 3 (sales_rep) or 4 (support)."
                    }
                },
                {
                    "name": "Delete User (Admin/Manager with constraints)",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/auth/users/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "users",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "1"
                                }
                            ]
                        },
                        "description": "Prevents self-deletion; Manager can delete only role_id >= 3."
                    }
                }
            ]
        },
